#!/bin/bash

# InterpreteConsola - Ejecuta cÃ³digo RoboLang en consola
# Default: programa_1.rbl

# Colores
RED='\033[0;31m'
GREEN='\033[0;32m'
YELLOW='\033[1;33m'
BLUE='\033[0;34m'
NC='\033[0m'

# ParÃ¡metro
PARAM_JAVA="${1:-programa_1.rbl}"

echo -e "${BLUE}âŒ¨ï¸  InterpreteConsola - Archivo: ${YELLOW}$PARAM_JAVA${NC}"

# 1. VERIFICAR archivo existe
if [ ! -f "$PARAM_JAVA" ]; then
    echo -e "${RED}âŒ ERROR: Archivo '$PARAM_JAVA' no encontrado${NC}"
    echo -e "   ğŸ“‚ Archivos disponibles:"
    ls *.rbl 2>/dev/null || echo "   NingÃºn .rbl encontrado"
    exit 1
fi

# 2. Classpath completo (wildcard lib/*)
CP="bin:lib/*"

echo -e "${BLUE}âš™ï¸  Ejecutando en consola...${NC}"
java -cp "$CP" \
     interpretes.InterpreteConsola "$PARAM_JAVA"

echo -e "${GREEN}ğŸ‰ EjecuciÃ³n consola finalizada${NC}"
