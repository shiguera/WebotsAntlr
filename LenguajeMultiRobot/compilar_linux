#!/bin/bash

# Este script compila todo el proyecto
# Para ejecutarlo, hay que estar situado en el directorio ra√≠z del proyecto
# Los ficheros compilados .class se guardan en el directorio bin


echo "üî® Compilando proyecto Robolang..."


# Establever el class path a las librer√≠as 
export CP="lib/*"

# Compilar
javac -cp "$CP" \
    -d bin \
    src/main/*.java src/lenguaje/*.java src/interpretes/*.java \
    src/sound/*.java src/webots/*.java src/stddraw/*.java src/consola/*.java

# Comprobar errores de compilaci√≥n
if [ $? -eq 0 ]; then
    echo "‚úÖ Compilaci√≥n exitosa"
else
    echo "‚ùå Errores de compilaci√≥n"
fi



