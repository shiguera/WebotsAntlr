#!/bin/bash

# Este script permite ejecutar el InterpreteWebots.
# Se puede pasar como parÃ¡metro el nombre del fichero fuente RoboLang.
# Default: 'programa_1.rbl'

PARAM_JAVA="${1:-programa_1.rbl}"

# Colores para terminal
RED='\033[0;31m'
GREEN='\033[0;32m'
YELLOW='\033[1;33m'
BLUE='\033[0;34m'
NC='\033[0m' # No Color

export LD_LIBRARY_PATH="./lib"

echo -e "${BLUE}ğŸ® InterpreteWebots - Archivo: ${YELLOW}$PARAM_JAVA${NC}"

# 1. VERIFICAR archivo existe
if [ ! -f "$PARAM_JAVA" ]; then
    echo -e "${RED}âŒ ERROR: Archivo '$PARAM_JAVA' no encontrado${NC}"
    echo "   Busca: ls *.rbl"
    exit 1
fi

# 2. Detectar Webots
if pgrep -f webots >/dev/null 2>&1; then
    echo -e "${GREEN}âœ… Webots detectado${NC}"
else
    echo -e "${YELLOW}ğŸš€ Arrancando Webots...${NC}"
    webots src/webots/MiniMundo.wbt &
    sleep 5
fi

# 3. Lanzar controlador (lib/* wildcard Java6+)
echo -e "${BLUE}âš™ï¸  Ejecutando controlador...${NC}"
java -cp "bin:lib/*" \
     -Djava.library.path=lib \
     interpretes.InterpreteWebots "$PARAM_JAVA"

echo -e "${GREEN}ğŸ‰ SimulaciÃ³n finalizada${NC}"
